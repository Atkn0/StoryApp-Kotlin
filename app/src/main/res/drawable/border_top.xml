<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arka plan rengi (BottomNavigationView'ın rengi) -->
    <item android:drawable="@color/home_bg" />

    <!-- Üst tarafta 1dp genişliğinde bir çerçeve (stroke border) -->
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:bottom="-1dp"
        android:top="1dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/gray_4" /> <!-- Stroke rengi -->
        </shape>
    </item>
</layer-list>