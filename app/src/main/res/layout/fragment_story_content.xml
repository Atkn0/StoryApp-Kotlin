<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.read_the_story.storyContentFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/storyContentTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textColor="@color/black"
            android:textSize="25sp"
            android:padding="8dp"
            android:layout_margin="20dp"
            android:id="@+id/storyContentTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TextView>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_marginStart="28dp"
        app:layout_constraintStart_toStartOf="@id/storyContentTextInputLayout"
        app:layout_constraintTop_toBottomOf="@id/storyContentTextInputLayout"
        android:layout_width="wrap_content"
        android:text="Arda Atakan Tosun"
        android:layout_height="wrap_content"
        android:id="@+id/contributorsNameTextView"
        tools:ignore="HardcodedText">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>